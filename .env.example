NODE_ENV=development
PORT=5000
DATABASE_URL=mongodb://localhost:27017/your-db-name
BCRYPT_SALT_ROUNDS=10
DEFAULT_PASSWORD=your_default_password

JWT_ACCESS_SECRET=your_access_secret
JWT_REFRESH_SECRET=your_refresh_secret
JWT_ACCESS_EXPIRES_IN=5h
JWT_REFRESH_EXPIRES_IN=7d

# Frontend and CORS
SHOP_FRONTEND_URL=http://localhost:5173
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
# Domain to set cookies for (use base domain in production)
COOKIE_DOMAIN=localhost


# Single admin bootstrap (optional)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me
ADMIN_NAME=Site Admin

# Email configuration (choose one)
# 1) SMTP provider
EMAIL_HOST=smtp.example.com
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=apikey_or_username
EMAIL_PASS=secret_or_password
EMAIL_FROM=Shop <no-reply@example.com>
# 2) Gmail app password fallback
# GOOGLE_APP_EMAIL=you@gmail.com
# GOOGLE_APP_PASSWORD=xxxx xxxx xxxx xxxx

# Stripe configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
